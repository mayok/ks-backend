FROM postgres:9.6

COPY summpy.sql /tmp
COPY init-user-db.sh /docker-entrypoint-initdb.d

RUN \
  apt-get update && \
  apt-get install -y \
    postgresql-plpython-9.6 \
    python-pip \
    python-dev

RUN \
  apt-get install -y \
    python-numpy \
    python-scipy

RUN pip install summpy janome
